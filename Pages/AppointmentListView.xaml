<Page x:Class="Terminplaner.Pages.AppointmentListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Terminplaner.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Appointments">

    <Grid>
        <ListView Name="appointmentList" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="descriptionColumn" Header="Description" Width="250"/>
                    <GridViewColumn x:Name="fromDateColumn" Header="From Date" Width="75"/>
                    <GridViewColumn x:Name="toDateColumn" Header="To Date" Width="75"/>
                    <GridViewColumn x:Name="typeColumn" Header="Type" Width="120"/>
                    <GridViewColumn x:Name="priorityColumn" Header="Priority" Width="120"/>
                    <GridViewColumn x:Name="statusColumn" Header="Status" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
